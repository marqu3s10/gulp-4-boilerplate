{
  "dist": "./dist",
  "images": {
    "src": "./src/images/site/**/*.{jpg,png}",
    "dist": "./dist/assets/images/site/"
  },
  "svg": {
    "src": "./src/images/svg/**/*.svg",
    "dist": "./dist/assets/images/svg/"
  },
  "sprites": {
    "src": "./src/images/sprites/**/*.{jpg,png}",
    "build": "./build/assets/images/sprites/"
  },
  "scripts": {
    "src": "./src/scripts/*.js",
    "build": "./build/assets/scripts/",
    "dist": "./dist/assets/scripts",
    "jsName": "*.js",
    "inlineJs": [
      "./node_modules/fg-loadcss/src/loadCSS.js",
      "./node_modules/fg-loadcss/src/cssrelpreload.js",
      "./node_modules/fontfaceobserver/fontfaceobserver.js",
      "./node_modules/loadjs/dist/loadjs.min.js"
    ],
    "templates": "./craft/templates/"
  },
  "styles": {
    "src": "./src/styles/",
    "build": "./build/assets/styles/",
    "dist": "./dist/assets/styles/",
    "cssName": "*.css",
    "sassName": "*.sass",
    "cssMapName": "*.css.map"
  },
  "fonts": {
    "src": "./src/",
    "dist": "./dist/assets/fonts/",
    "fontsName": "fonts/**/*.{eot,ttf,woff,woff2,svg}",

    "fontello": {
      "src": "./src/fonts/fontello/",
      "build": "./build/assets/fonts/fontello/",
      "cssName": "css/fontello.css",
      "configName": "config.json"
    }
  },
  "node": {
    "normalize": "./node_modules/normalize.css/normalize.css"
  },
  "html": {
    "src": "./src/pug/",
    "build": "./build/",
    "dist": "./dist",
    "pugName": "**/*.pug",
    "htmlName": "**/*.html",
    "includesName": "_includes{,/**}"
  },
  "critical": [
    "index.html",
    "blog/index.html"
  ]
}
